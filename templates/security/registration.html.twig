{% extends "base.html.twig" %}

{% block body %}

	<h1>Bonjour à tous !</h1>

	{{ form_start(form) }}

	{{ form_row(form.username, {"label": "Nom d'utilisateur", "attr": {"placeholder": "Nom d'utilisateur"}}) }}
	{{ form_row(form.email, {"label": "Adresse email", "attr": {"placeholder": "Votre adresse mail"}})  }}
	{{ form_row(form.password, {"label": "Mot de passe", "attr": {"placeholder": "Mot de passe"}}) }}
	{{ form_row(form.confirm_password, {"label": "Confirmer le mot de passe", "attr": {"placeholder": "Répéter le mot de passe"}}) }}

	<button type="submit" class="btn btn-success"> Inscription !</button>

	{{ form_end(form) }}

{% endblock %}