{% extends "base.html.twig" %}

{% block body %}
	<h1>Connexion !</h1>

	<form action="{{ path("security_login") }}" method="post">
		<div class="form-group">
			<input class="form-control" placeholder="Email" required type="text" name="_username">
		</div>
		<div class="form-group">
			<input class="form-control" placeholder="Mot de passe" required type="password" name="_password">
		</div>
		<div class="form-group">
			<button type="submit" class="btn btn-success"> Connexion !</button>
		</div>
	</form>
{% endblock %}